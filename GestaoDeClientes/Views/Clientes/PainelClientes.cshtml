@model IEnumerable<GestaoDeClientes.Models.Cliente>

@{
    ViewData["Title"] = "ListarClientes";
}

<!-- Begin page -->
<!-- ============================================================== -->
<!-- Start Page Content here -->
<!-- ============================================================== -->


<div class="content">

    <!-- Start Content-->
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                   
                    <h4 class="page-title">Portfólio de Clientes</h4>
                    <div class="page-title-right">
                        <ol class="breadcrumb p-0 m-0">
                            <li class="breadcrumb-item">
                                <a href="/">Home</a>
                            </li>
                            <li class="breadcrumb-item active">
                                Clientes
                            </li>
                           
                        </ol>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="input-group">
                            <input type="text" id="example-input1-group2" name="example-input1-group2"
                                   class="form-control" placeholder="Buscar">
                            <span class="input-group-append">
                                <button type="button" class="btn waves-effect waves-light btn-primary">
                                    <i class="fa fa-search"></i>
                                </button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="row">
            @foreach (var item in Model) { 
            
            <div class="col-lg-6 col-xl-4">
                <div class="card">
                    <div class="card-body">
                        <div class="media">
                            <a class="mr-3"
                               href="#">


                                <img class="avatar-md rounded-circle" src="~/images/avatar-2.jpg" alt="">
                            </a>
                            
                            <div class="media-body info align-self-center">
                                <a asp-action="PerfilCliente" asp-route-id="@item.ClienteId">
                                    <h5 class="font-16 mt-0 mb-1"> @Html.DisplayFor(modelItem => item.ClienteNome)</h5>
                                    </a>
                                    <p class="font-13 text-muted mb-0">@Html.DisplayFor(modelItem => item.ClienteEmpresa)</p>
                            </div>
                          
                            <div class="btn-group-sm">
                                <a asp-action="AtualizarCliente" asp-route-id="@item.ClienteId"
                                   class="btn btn-success waves-effect waves-light tooltips mr-1"
                                   data-placement="top" data-toggle="tooltip" data-original-title="Editar">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <a asp-action="ExcluirCliente" asp-route-id="@item.ClienteId"
                                   class="btn btn-danger waves-effect waves-light tooltips"
                                   data-placement="top" data-toggle="tooltip" data-original-title="Excluir">
                                    <i class="far fa-window-close"></i>
                                </a>
                            </div>
                        </div>

                        <hr class="mt-4">

                        <ul class="social-links list-inline mb-0 mt-4">
                            <li class="list-inline-item">
                                <a title="" data-placement="top" data-toggle="tooltip" class="tooltips"
                                   href="#"
                                   data-original-title="TV"><i class="material-icons">live_tv</i></a>
                            </li>
                            <li class="list-inline-item">
                                <a title="" data-placement="top" data-toggle="tooltip" class="tooltips"
                                   href="#"
                                    data-original-title="Rádio"><i class="material-icons">radio</i></a>
                            </li>
                            <li class="list-inline-item">
                                <a title="" data-placement="top" data-toggle="tooltip" class="tooltips"
                                   href="#"
                                   data-original-title="Sites"><i class="material-icons">language</i></a>
                            </li>
                            <li class="list-inline-item">
                                <a title="" data-placement="top" data-toggle="tooltip" class="tooltips"
                                   href="#"
                                   data-original-title="Diários Oficiais"><i class="material-icons">assured_workload</i></a>
                            </li>
                            
                        </ul>
                    </div>
                    <!-- panel-body -->
                </div>
                <!-- panel -->
            </div>

            <!-- end col -->
            <!-- Vendor js -->
            }
        </div>
    </div>
</div>
<script src="~/js/vendor.min.js"></script>

<!-- App js -->
<script src="~/js/app.min.js"></script>

